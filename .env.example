# Flov7 Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# Generate a secure secret key for JWT tokens
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# AI SERVICE CONFIGURATION
# ============================================================================
# OpenAI API configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# ============================================================================
# WORKFLOW SERVICE CONFIGURATION
# ============================================================================
# Temporal configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=flov7-workflows

# CrewAI configuration
CREWAI_VERBOSE=true
CREWAI_MAX_EXECUTION_TIME=300

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis for caching and session storage
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# API GATEWAY CONFIGURATION
# ============================================================================
# API Gateway settings
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_GATEWAY_RELOAD=true

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ============================================================================
# SERVICE PORTS
# ============================================================================
# Microservice port configuration
AI_SERVICE_PORT=8001
WORKFLOW_SERVICE_PORT=8002
API_GATEWAY_PORT=8000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/flov7.log

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Development mode settings
DEBUG=false
ENVIRONMENT=development
TESTING=false

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Security configuration
API_KEY_EXPIRY_DAYS=365
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
# Additional database settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# Monitoring settings (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Email service (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Webhook settings
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_SECONDS=30

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================
# Production deployment settings
DOMAIN=localhost
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
